@model ProductosMVC.Models.Product

<h2>Product Details</h2>

<div>
    <h3>@Model.Title</h3>
    @if (Model.Images != null && Model.Images.Any())
    {
        <p><img src="@Model.Images[0]" class="card-img-top" alt="@Model.Title"></p>
    }
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Price:</strong> @Model.PriceWithTaxes.ToString("C")&nbsp;<small>(inc. taxes)</small></p>
    <p><strong>Category:</strong> @Model.Category?.Name</p>
    <p><strong>Created at:</strong> @Model.CreationAt.ToString("dd/MM/yyyy HH:mm:ss")</p>
    <p><strong>Updated at:</strong> @Model.UpdatedAt.ToString("dd/MM/yyyy HH:mm:ss")</p>
</div>

<div>
    <a asp-action="Index">Back To Product List</a>
</div>
